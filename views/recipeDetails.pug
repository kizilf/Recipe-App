doctype html
html
  head
    title RecipeApp
    link(rel='stylesheet' href='https://getbootstrap.com/docs/4.4/dist/css/bootstrap.min.css')
    style.
      footer {
        padding-top: 1rem;
        padding-bottom: 1rem;
        bottom: 0;
        width: 100%;
        height: 60px;
        position: fixed;
      }

      footer p {
        margin-bottom: .25rem;
      }
      .jumbotron{
        margin:15px 30px 0px 30px;
        border-radius:10px;
          background: 
        linear-gradient(
          rgba(0, 0, 0, 0.75), 
          rgba(0, 0, 0, 0.45)
        ),
        url(`${recipe.url}`);
        background-repeat: no-repeat;
        background-position: center;
        color:white !important;
        height:200px;
      }
        .float-md-left {
            padding-top: 2rem;
            padding-left: 4rem;
        }

        .float-md-right {
            padding-top: 2rem;
            padding-right: 4rem;
        }

    body
        include header.pug
        .jumbotron.text-center
            .container
                h1.text-light #{recipe.title}
                
        .float-md-left.col-md-6.d-flex.align-items-stretch
            .card.mb-4.shadow-sm
                .card-body
                    h4.card-title.text-center List Of Ingredients
                    .card-text
                        span(style='white-space: pre-line')
                            p #{recipe.ingredients}

        .float-md-right.col-md-6.d-flex.align-items-stretch
            .card.mb-4.shadow-sm
                .card-body
                    h4.card-title.text-center Preperation Steps
                    .card-text
                        span(style='white-space: pre-line')
                            p.text-center #{recipe.steps}    
    
    script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js')
    script(src='https://getbootstrap.com/docs/4.4/dist/js/bootstrap.bundle.min.js')


