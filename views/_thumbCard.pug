mixin thumbCard(recipe)
  style.
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .textLikeButton {
        background: none!important;
        border: none;
        padding: 0!important;
    }

  
  .col-md-4.d-flex.align-items-stretch
    .card.mb-4.shadow-sm.bg-dark
      card-img-top
      img(src=recipe.url)
      .card-body
        .card-text
          form.inline(method='post' action='/recipeDetails')
            button.link-button.textLikeButton(id="patates" type='submit' name='submit_param' value=recipe._id)
              strong.text-light #{recipe.title}


mixin addCard()
  style.
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

  .col-md-4.d-flex.align-items-stretch
    .card.mb-4.shadow-sm.bg-dark 
      card-img-top 
      img(src="https://thumbs.dreamstime.com/b/plus-sign-icon-positive-symbol-zoom-vector-illustration-isolated-white-background-138387553.jpg")
      .card-body
        .card-text
         a(href='/addRecipe')
          strong.text-light Share yours!